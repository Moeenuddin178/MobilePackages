<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@id/topLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rect_curved">

        <TextView
            android:id="@id/damTv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:padding="15.0dip"
            android:text="@string/quick_note"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/heading5" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/topLayout"
        android:background="#b4ffffff"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@id/ll"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/padding5">

            <com.google.android.gms.ads.AdView
                android:id="@id/adView1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:adSize="SMART_BANNER"
                app:adUnitId="ca-app-pub-8967464574011121/7933288002" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@id/jazzBtn"
                    android:layout_width="@dimen/card_width"
                    android:layout_height="@dimen/card_height"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:onClick="packagesBtn"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="3.0dip"
                    app:cardElevation="3.0dip"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/main_icon_size"
                            android:layout_height="@dimen/main_icon_size"
                            android:background="@drawable/shapte_circle"
                            android:padding="@dimen/padding5"
                            android:src="@drawable/m_jazz" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding5"
                            android:text="Jazz Warid"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/normal_text"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@id/telenorBtn"
                    android:layout_width="@dimen/card_width"
                    android:layout_height="@dimen/card_height"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:onClick="packagesBtn"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="3.0dip"
                    app:cardElevation="3.0dip"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/main_icon_size"
                            android:layout_height="@dimen/main_icon_size"
                            android:background="@drawable/shapte_circle"
                            android:padding="@dimen/padding5"
                            android:src="@drawable/m_telenor" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding5"
                            android:text="Telenor"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/normal_text"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@id/ufoneBtn"
                    android:layout_width="@dimen/card_width"
                    android:layout_height="@dimen/card_height"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:onClick="packagesBtn"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="3.0dip"
                    app:cardElevation="3.0dip"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/main_icon_size"
                            android:layout_height="@dimen/main_icon_size"
                            android:background="@drawable/shapte_circle"
                            android:padding="@dimen/padding5"
                            android:src="@drawable/m_ufone" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding5"
                            android:text="Ufone"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/normal_text"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@id/zongBtn"
                    android:layout_width="@dimen/card_width"
                    android:layout_height="@dimen/card_height"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:onClick="packagesBtn"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="3.0dip"
                    app:cardElevation="3.0dip"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/main_icon_size"
                            android:layout_height="@dimen/main_icon_size"
                            android:background="@drawable/shapte_circle"
                            android:padding="@dimen/padding5"
                            android:src="@drawable/m_zong" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding5"
                            android:text="Zong"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/normal_text"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@id/myAddedBtn"
                    android:layout_width="@dimen/card_width"
                    android:layout_height="@dimen/card_height"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:onClick="packagesBtn"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="3.0dip"
                    app:cardElevation="3.0dip"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/main_icon_size"
                            android:layout_height="@dimen/main_icon_size"
                            android:background="@drawable/shapte_circle"
                            android:padding="@dimen/padding5"
                            android:src="@drawable/m_add" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding5"
                            android:text="My Packages"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/normal_text"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>